<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitcoinapi.MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/currency_textview"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/symbol_spinner"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/symbol_spinner"
        android:layout_width="120dp"
        android:layout_height="80dp"

        android:layout_alignLeft="@+id/currency_textview"
        android:layout_alignStart="@+id/currency_textview"
        android:layout_below="@+id/bitcoin_image"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/bitcoin_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/images" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/currency_textview"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/currency_textview"
        android:layout_toStartOf="@+id/currency_textview"
        android:text="Bitcoin value: "
        android:textSize="13sp"
        android:textColor="#000000"
        />

</RelativeLayout>
